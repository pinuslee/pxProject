extends layout


block pxboard_content
  script.
    function fn_onSubmit() {
      if ($("#password").val().trim() == "") {
        var message = "패스워드를 입력해 주세요";
        $("#password").val("");
        $("#password").focus();
        alert(message);
        return false;
      }
    }

  form(action='/pxboard/' method='post' onsubmit="return fn_onSubmit()")
    input(type='hidden' name='boardID' value='#{info.boardID}' )
    input(type='hidden' name='action' value='#{action}' )
    input(type='hidden' name='num' value='#{num}')
    table.pxboard_table3
      tr
        td(valign='center')

          table(align='center' height=40)
            tr
              td(width=80) 비밀번호
              td
                input(type='password' name='password' size=8 required=true)
              td(width=70 colspan=2 align='center')
                button(type='submit' style='cursor:pointer') 확 인

          - if(msg!==null){
          table(align='center' height=30)
            tr
              td(align='center').pxboard-msg-p error: #{msg}
          - }